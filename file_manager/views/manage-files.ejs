<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Files</title>
  <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
  <header>
    <h1>Manage Files</h1>
    
  </header>
  <main>
    <form action="/files/upload" method="POST" enctype="multipart/form-data">
      
      <label for="file">Select file:</label>
      <input type="file" id="file" name="file" required>
      
      <button type="submit">Upload File</button>
      <button type="submit">delete File</button>
    </form>

    

    <h2>Your Files</h2>
    <ul>
      <% files.forEach(file => { %>
        <li>
          <a href="/files/<%= file.id %>"><%= file.filename %></a>

          <!-- Delete Form -->
          <form action="/files/<%= file.id %>?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit">Delete</button>
          </form>

          <!-- Update Form -->
          <form action="/files/<%= file.id %>?_method=PUT" method="POST" enctype="multipart/form-data" style="display: inline;">
            <label for="update-file-<%= file.id %>">Update file:</label>
            <input type="file" id="update-file-<%= file.id %>" name="file" required>
            <button type="submit">Update</button>
          </form>
        </li>
      <% }) %>
    </ul>
  </main>
</body>
</html>
